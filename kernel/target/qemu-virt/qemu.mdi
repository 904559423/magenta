include "kernel/include/mdi/kernel-defs.mdi"

cpu-map = {
    clusters = {
        {
            cpu-count = 8
        }
    }
}

kernel-drivers = {
    qemu-uart = {
        base-phys = 0x09000000
        irq = 33
    }
    arm-gic-v3 = {
        base-phys = 0x08000000
        gicd-offset = 0x00000
        gicr-offset = 0xa0000
        gicr-stride = 0x10000
        ipi-base = 13
    }
    arm-psci = {
        use-hvc = true
    }
    arm-generic-timer = {
        irq-virt = 27
    }
    qemu-pcie = {}
}
